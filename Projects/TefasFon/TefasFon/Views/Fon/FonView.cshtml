                                <div class="value-box">
                                    <strong>1YIL</strong><br>
                                    @Model.DataList[12]
                                </div>
                            </td>
                        </tr>*@
                </tbody>
            </table>


        }
        else
        {
            <p>Veri bulunamadı.</p>
        }
    </div>


