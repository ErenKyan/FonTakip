                            <ul>
                                <li>
                                    <strong>Son Bir Yıllık Kategori Derecesi</strong>
                                    <span>@Model.DataList[6]</span>
                                </li>

                            </ul>
                        </td>
                        <td>
                            <ul>
                                <li>
                                    <strong>Yatırımcı Sayısı (kişi)</strong>
                                    <span>@Model.DataList[7]</span>
                                </li>

                            </ul>
                        </td>
                        <td>
                            <ul>
                                <li>
                                    <strong>Pazar Payı</strong>
                                    <span>@Model.DataList[8]</span>
                                </li>

                            </ul>
                        </td>
                    </tr>

                    @*<tr>
                            <td>
                                <div class="value-box">
