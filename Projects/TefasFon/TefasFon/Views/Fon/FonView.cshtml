<!DOCTYPE html>
<html>
<head>
    <title>Fon Verileri</title>
    <style>
        body {
            text-align: center;
        }

        .center {
            display: block;
            margin: auto;
            width: 60%;
            border: 1px solid #EFEFEF;
            padding: 0.1%;
            text-align: center;
        }

            .center h1 {
                margin: 0;
            }

        ul {
            list-style-type: disc;
            padding: 0.1%;
            font-size: 13px;
            text-align: center;
        }

            ul li strong {
                display: block;
                font-weight: bold;
                margin-bottom: 5%;
            }

            ul li {
                background-image: url(https://www.tefas.gov.tr/Images/border-gray-gradient.jpg);
                background-position-x: right;
                background-position-y: top;
                background-size: initial;
                background-repeat-x: no-repeat;
                background-repeat-y: no-repeat;
                background-attachment: initial;
                background-origin: initial;
                background-clip: initial;
                background-color: initial;
                display: inline-block;
                margin: 0 20px;
            }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            padding: 0.1%;
            text-align: center;
        }
        #searchInput {
            width: 57%; /* SearchBar Boyutunu Ayarlama */
        }
    </style>
</head>
<body>
    <div class="fon-search">
        <input type="text" id="searchInput" placeholder="Arama yap..." onkeypress="searchFonOnEnter(event)">
        <button id="searchButton" onclick="searchFon()">Ara</button>
    </div>

    <div class="center">
        @if (Model.DataList != null && Model.DataList.Count > 0)
        {
            <table>
                <tbody>
